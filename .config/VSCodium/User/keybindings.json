[
    {
        "key": "ctrl+j",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "-workbench.action.quickOpen"
    },
    {
        "key": "space f",
        "command": "workbench.action.quickOpen",
        "when": "!inputFocus || editorFocus && vim.mode != 'Insert' && vim.mode != 'CommandlineInProgress' && vim.mode != 'SearchInProgressMode'",
    },
    {
        "key": "space w",
        "command": "workbench.action.files.save",
        "when": "editorTextFocus && vim.mode != 'Insert' && vim.mode != 'CommandlineInProgress' && vim.mode != 'SearchInProgressMode'",
    },
    {
        "key": "space c",
        "command": "workbench.action.openSettingsJson",
        "when": "!inputFocus || editorTextFocus && vim.mode != 'Insert' && vim.mode != 'CommandlineInProgress' && vim.mode != 'SearchInProgressMode'",
    },
    {
        "key": "space k",
        "command": "workbench.action.openGlobalKeybindingsFile",
        "when": "!inputFocus || editorTextFocus && vim.mode != 'Insert' && vim.mode != 'CommandlineInProgress' && vim.mode != 'SearchInProgressMode'",
    },
    {
        "key": "space e",
        "command": "editor.action.showHover",
        "when": "editorTextFocus && vim.mode != 'Insert' && vim.mode != 'CommandlineInProgress' && vim.mode != 'SearchInProgressMode'",
    },
    {
        "key": "space o",
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "editorTextFocus && vim.mode != 'Insert' && vim.mode != 'CommandlineInProgress' && vim.mode != 'SearchInProgressMode'",
    },
    {
        "key": "space r",
        "command": "editor.action.rename",
        "when": "editorTextFocus && vim.mode != 'Insert' && vim.mode != 'CommandlineInProgress' && vim.mode != 'SearchInProgressMode'",
    },
    {
        "key": "space t",
        "command": "workbench.action.terminal.focus",
        "when": "editorTextFocus && vim.mode != 'Insert' && vim.mode != 'CommandlineInProgress' && vim.mode != 'SearchInProgressMode'",
    },
    {
        "key": "-",
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "!inputFocus || editorTextFocus && vim.mode != 'Insert' && vim.mode != 'CommandlineInProgress' && vim.mode != 'SearchInProgressMode'",
    },
    {
        "key": "space q",
        "command": "workbench.action.closeActiveEditor",
        "when": "editorTextFocus && vim.mode != 'Insert' && vim.mode != 'CommandlineInProgress' && vim.mode != 'SearchInProgressMode'",
    },
    {
        "key": "a",
        "command": "explorer.newFile",
        "when": "!inputFocus && filesExplorerFocus"
    },
    {
        "key": "d",
        "command": "explorer.deleteFile",
        "when": "!inputFocus && filesExplorerFocus"
    },
    {
        "key": "space p",
        "command": "workbench.action.showCommands",
        "when": "!inputFocus || editorTextFocus && vim.mode != 'Insert' && vim.mode != 'CommandlineInProgress' && vim.mode != 'SearchInProgressMode'"
    },
    {
        "key": "g d",
        "command": "editor.action.revealDefinition",
        "when": "inputFocus && editorTextFocus && vim.mode == 'Normal'"
    },
    {
        "key": "g e",
        "command": "editor.action.marker.prev",
        "when": "inputFocus && editorTextFocus && vim.mode == 'Normal'"
    },
    {
        "key": "shift+alt+f8",
        "command": "-editor.action.marker.prev",
        "when": "editorFocus"
    },
]