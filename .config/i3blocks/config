# Global properties
separator=true
separator_block_width=15

# [cpu]
# command=date '+%d %b %H %M %s'
# interval=once
# signal=10

[battery]
command=type blocks > /dev/null 2>&1 && blocks battery
interval=5

[ip]
command=type blocks > /dev/null 2>&1 && blocks ip enp1s0
interval=5

[disk]
command=type blocks > /dev/null 2>&1 && blocks disk
interval=5

[ram]
command=type blocks > /dev/null 2>&1 && blocks ram
interval=5

[scope]
command=type scope > /dev/null 2>&1 && scope get
interval=1

[date]
command=date '+%d %b'
interval=1

[time]
command=date '+%H:%M'
interval=1

